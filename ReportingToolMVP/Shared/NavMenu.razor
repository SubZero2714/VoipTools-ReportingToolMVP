<div class="sidebar-container @(IsCollapsed ? "collapsed" : "")">
    <div class="top-row">
        <div class="brand-section">
            @if (!IsCollapsed)
            {
                <span class="brand-icon">📊</span>
                <span class="brand-text">VoIPTools Reporting</span>
            }
            else
            {
                <span class="brand-icon-only">📊</span>
            }
        </div>
        <button class="collapse-btn" @onclick="ToggleSidebar" title="@(IsCollapsed ? "Expand" : "Collapse")">
            <span class="oi @(IsCollapsed ? "oi-chevron-right" : "oi-chevron-left")"></span>
        </button>
    </div>

    <nav class="nav-menu">
        <NavLink class="nav-link-item" href="" Match="NavLinkMatch.All">
            <span class="nav-icon oi oi-home"></span>
            @if (!IsCollapsed)
            {
                <span class="nav-text">Home</span>
            }
        </NavLink>
        
        <NavLink class="nav-link-item" href="reportbuilder">
            <span class="nav-icon oi oi-spreadsheet"></span>
            @if (!IsCollapsed)
            {
                <span class="nav-text">Report Builder</span>
            }
        </NavLink>

        <NavLink class="nav-link-item" href="test">
            <span class="nav-icon oi oi-check"></span>
            @if (!IsCollapsed)
            {
                <span class="nav-text">Test Suite</span>
            }
        </NavLink>
    </nav>
</div>

@code {
    private bool IsCollapsed = false;

    private void ToggleSidebar()
    {
        IsCollapsed = !IsCollapsed;
    }
}
